\setbeamercolor{separation line}{bg=blue}
\setbeamercolor{title in headline}{fg=blue}
\setbeamercolor{author in headline}{fg=black}
\setbeamercolor{institute in headline}{fg=black}

\setbeamercolor{framesubtitle}{}
\setbeamercolor{author in head/foot}{}
\setbeamercolor{title in head/foot}{}

\setbeamercolor*{normal text}{fg=black}
\setbeamercolor*{block body}{}
\setbeamercolor*{block title}{}
